<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultViewActivity">

    <TextView
        android:id="@+id/text_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_title_err"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="invisible"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/result_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_subtitle"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TableLayout
            android:id="@+id/result_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- 1: 区間(Title) -->
            <TableRow
                android:id="@+id/row_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_title_section"
                    style="@color/colorPrimary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorSubtitleBar"
                    android:text="@string/result_section"
                    android:textStyle="bold" />
            </TableRow>

            <!-- 2: 区間 -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/text_section"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/result_section" />
            </TableRow>

            <!-- 3: キロ程(Title) -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/text_title_kiro"
                    android:layout_width="wrap_content"
                    android:background="@color/colorSubtitleBar"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/result_kiro"
                    android:textStyle="bold" />

            </TableRow>

            <!-- 4: 営業キロ -->
            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/text_title_saleskm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/result_saleskm" />

                <TextView
                    android:id="@+id/text_saleskm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/result_kmval" />

                <TextView
                    android:id="@+id/text_title_calckm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/result_calckm" />

                <TextView
                    android:id="@+id/text_calckm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </TableRow>

            <!-- 5: JRXXXX1(キロ程) -->
            <TableRow
                android:id="@+id/row_km1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_jrgroup_km1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/result_jrcompany_hokaido" />

                <TextView
                    android:id="@+id/text_jrgroup_saleskm1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/result_kmval" />

                <TextView
                    android:id="@+id/text_jrgroup_title_calckm1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/blank" />

                <TextView
                    android:id="@+id/text_jrgroup_calckm1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </TableRow>
            <!-- 5: JRXXXX2(キロ程) -->
            <TableRow
                android:id="@+id/row_km2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_jrgroup_km2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/result_jrcompany_hokaido" />

                <TextView
                    android:id="@+id/text_jrgroup_saleskm2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/result_kmval" />

                <TextView
                    android:id="@+id/text_jrgroup_title_calckm2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/blank" />

                <TextView
                    android:id="@+id/text_jrgroup_calckm2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </TableRow>
            <!-- 5: JRXXXX3(キロ程) -->
            <TableRow
                android:id="@+id/row_km3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_jrgroup_km3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/result_jrcompany_hokaido" />

                <TextView
                    android:id="@+id/text_jrgroup_saleskm3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/result_kmval" />

                <TextView
                    android:id="@+id/text_jrgroup_title_calckm3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/blank" />

                <TextView
                    android:id="@+id/text_jrgroup_calckm3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </TableRow>
            <!-- 6: 規程114条適用 -->
            <TableRow
                android:id="@+id/row_114rule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_title_rule114_kiro"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/result_rule114" />

                <TextView
                    android:id="@+id/text_rule114_salesKm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/result_kmval" />

                <TextView
                    android:id="@+id/text_title_rule114_calckm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/blank" />

                <TextView
                    android:id="@+id/text_rule114_calckm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </TableRow>
            <!-- 7: JR線、会社線 -->
            <TableRow
                android:id="@+id/row_jr_or_company_line_km"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_title_jrline_km"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/result_jrline" />

                <TextView
                    android:id="@+id/text_jrline_km"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/result_kmval" />

                <TextView
                    android:id="@+id/text_title_company_km"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/result_comapanyline" />

                <TextView
                    android:id="@+id/text_company_km"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </TableRow>
            <!-- 8: 運賃(Title) -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_title_fare"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorSubtitleBar"
                    android:text="@string/result_fare"
                    android:textStyle="bold" />

            </TableRow>
            <!-- 9: 普通 -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_title_normalfare"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/result_normalfare" />

                <TextView
                    android:id="@+id/text_normalfare"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/result_farevalue" />

                <TextView
                    android:id="@+id/text_title_company_fare"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/result_companyfare" />

                <TextView
                    android:id="@+id/text_company_fare"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/result_farevalue" />
            </TableRow>
            <!-- 10: 往復 -->
            <TableRow
                android:id="@+id/row_round_trip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_title_round"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/result_round" />

                <TextView
                    android:id="@+id/text_round"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/result_farevalue" />

                <TextView
                    android:id="@+id/text_title_round2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/blank" />

                <TextView
                    android:id="@+id/text_round2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/result_farevalue" />
            </TableRow>
            <!-- 11: 114条適用しない運賃: -->
            <TableRow
                android:id="@+id/row_114rule_fare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_title_rule114_fare"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/result_no_rule114_title_fare" />

                <TextView
                    android:id="@+id/text_rule114_fare"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/result_farevalue" />
            </TableRow>
            <!-- 11: JR東日本 株主優待2割: -->
            <TableRow
                android:id="@+id/row_stock_option1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_title_stock_discount1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/result_stockdiscount" />

                <TextView
                    android:id="@+id/text_stock_discount1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/result_farevalue" />
            </TableRow>
            <!-- 12: JR東日本 株主優待4割: -->
            <TableRow
                android:id="@+id/row_stock_option2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_title_stock_discount2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/result_stockdiscount" />

                <TextView
                    android:id="@+id/text_stock_discount2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/result_farevalue" />
            </TableRow>
            <!-- 13: 小児運賃 -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_title_children_fare"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/result_chilefare" />

                <TextView
                    android:id="@+id/text_children_fare"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/result_farevalue" />

                <TextView
                    android:id="@+id/text_title_children_fare_round"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/result_round" />

                <TextView
                    android:id="@+id/text_children_fare_round"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/result_farevalue" />
            </TableRow>
            <!-- 14: 学割運賃 -->
            <TableRow
                android:id="@+id/row_student_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_title_student_fare"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/result_studentdiscount" />

                <TextView
                    android:id="@+id/text_student_fare"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/result_farevalue" />

                <TextView
                    android:id="@+id/text_title_student_fare_round"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/result_round" />

                <TextView
                    android:id="@+id/text_student_fare_round"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/result_farevalue" />
            </TableRow>
            <!-- 備考 -->
            <TableRow
                android:id="@+id/row_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/text_note"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="4"
                    android:layout_gravity="left"
                    android:text="" />
            </TableRow>
            <!-- 15:  有効日数(Title)-->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_title_availdays"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorSubtitleBar"
                    android:text="@string/result_availdays"
                    android:textStyle="bold" />
            </TableRow>
            <!-- 16: 有効日数 Value -->
            <TableRow
                android:id="@+id/row_avail_day1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_availdays"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/result_days" />
            </TableRow>
            <!-- 16: 有効日数 Value2 -->
            <TableRow
                android:id="@+id/row_avail_day2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_availdays2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/result_days" />
            </TableRow>
            <!-- 17: 経由(Title) -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/text_title_via"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorSubtitleBar"
                    android:text="@string/result_via"
                    android:textStyle="bold" />
            </TableRow>
            <!-- 18: 経由(Value)) -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_via"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/result_days_metro1" />
            </TableRow>

        </TableLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>